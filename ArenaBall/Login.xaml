<Window x:Class="ArenaBall.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArenaBall"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="Username" HorizontalAlignment="Left" Height="21" Margin="350,150,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged" RenderTransformOrigin="-0.196,1.326"/>
        <PasswordBox x:Name="Password" HorizontalAlignment="Left" Margin="350,176,0,0" VerticalAlignment="Top" Width="120" Password="" Height="21" />
        <Button Content="Login" HorizontalAlignment="Left" Margin="350,202,0,0" VerticalAlignment="Top" Width="120" Click="Button_Click"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="287,145,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.508,-3.204" Height="26"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="287,171,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.508,-3.204" Height="26"/>

    </Grid>
</Window>
